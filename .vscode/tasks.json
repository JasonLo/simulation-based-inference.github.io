{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "$(debug-start) serve",
            "type": "shell",
            "command": "bundle exec jekyll serve --incremental",
        },
        {
            "label": "$(refresh) git ff",
            "type": "shell",
            "command": "git merge --ff-only upstream/main && echo 'git ff done, pushing to origin...' && git push origin main",
        }
    ]
}